{
    "manifest_version": 3,
    "name": "FT-Reader",
    "version": "0.0.1",
    "description": "Allows you to read Financial Times without a subscription.",
    "icons": {
        "48": "assets/icon.svg"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.ft.com/*"
            ],
            "js": [
                "ft-reader.js"
            ]
        }
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "ft-reader@ture.dev"
        }
    }
}